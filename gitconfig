[alias]
	st = status
	lsd = "log --graph --decorate --pretty=oneline --abbrev-commit --all"
	br = branch
	co = checkout
  pc = "!git push origin \"$(git rev-parse --abbrev-ref HEAD)\""
  pr = pull --rebase
  ff = merge --ff-only
  cb = checkout -b
  wip = commit -am 'WIP'
